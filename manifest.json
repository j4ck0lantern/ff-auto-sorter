{
  "manifest_version": 3,
  "name": "Hobby Bookmark Sorter",
  "version": "1.0",
  "description": "Automatically organizes new and existing bookmarks into hobby folders based on keywords in the title and URL.",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}